<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="15dp">
    <TextView
        android:id="@+id/separator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:textSize="18sp"
        android:text="-"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <TextView
        android:id="@+id/list_item_tv_home_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:textSize="18sp"
        tools:text="1"
        android:paddingLeft="18dp"
        android:paddingStart="18dp"
        android:paddingRight="5dp"
        android:paddingEnd="5dp"
        app:layout_constraintRight_toLeftOf="@id/separator"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <TextView
        android:id="@+id/list_item_tv_away_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:textSize="18sp"
        android:paddingStart="5dp"
        android:paddingRight="18dp"
        android:paddingEnd="18dp"
        tools:text="0"
        app:layout_constraintLeft_toRightOf="@id/separator"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        />
    <ImageView
        android:id="@+id/list_item_iv_home_logo"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/logo_man_utd"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/list_item_tv_home_score"
        />
    <ImageView
        android:id="@+id/list_item_iv_away_logo"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/logo_chelsea_fc"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/list_item_tv_away_score"
        />
    <TextView
        android:id="@+id/list_item_tv_home_team"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:textSize="18sp"
        tools:text="MAN UTD"
        app:layout_constraintTop_toBottomOf="@id/list_item_iv_home_logo"
        app:layout_constraintLeft_toLeftOf="@id/list_item_iv_home_logo"
        app:layout_constraintRight_toRightOf="@id/list_item_iv_home_logo"
        />

    <TextView
        android:id="@+id/list_item_tv_away_team"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:textSize="18sp"
        tools:text="CHELSEA"
        app:layout_constraintTop_toBottomOf="@id/list_item_iv_away_logo"
        app:layout_constraintLeft_toLeftOf="@id/list_item_iv_away_logo"
        app:layout_constraintRight_toRightOf="@id/list_item_iv_away_logo"
        />

    <TextView
        android:id="@+id/list_item_tv_match_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/list_item_iv_home_logo"
        app:layout_constraintRight_toRightOf="@id/list_item_iv_away_logo"
        app:layout_constraintBottom_toTopOf="@id/list_item_tv_home_score"
        android:layout_marginBottom="12dp"
        android:text="01.04.2017 13:30"
        tools:text="01.04.2017 13:30"
        />
</android.support.constraint.ConstraintLayout>